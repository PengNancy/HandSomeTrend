<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/headlayout_onlytitle"></include>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:textColor="@color/input_msg_color"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_delete"
            android:id="@+id/edit_phone"
            android:textSize="16dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号" />

        <ImageView
            android:visibility="invisible"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_delete"
            android:layout_alignParentRight="true"
            android:src="@mipmap/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:text=""
        android:background="@color/tv_vali_false"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/layout_inputvali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/edit_vali"
            android:textColor="@color/input_msg_color"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/tv_xia"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/tv_getvali"
            android:id="@+id/tv_xia"
            android:text=""
            android:background="@color/tv_vali_false"
            android:layout_width="1dp"
            android:layout_height="15dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/tv_vali_true"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:id="@+id/tv_getvali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码" />

    </RelativeLayout>

    <TextView
        android:text=""
        android:background="@color/tv_vali_false"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

        <Button
            android:layout_marginTop="85dp"
            android:enabled="false"
            android:textColor="@color/input_msg_color"
            android:id="@+id/btn_login"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cicre_loginbtn"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>